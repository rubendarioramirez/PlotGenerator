<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="16dp"
    android:background="?colorDivider"
    android:elevation="10dp">


    <ImageView
        android:id="@+id/challenge_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/challenge_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/challenge_item_btn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Let's do it"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white" />

    <TextView
        android:id="@+id/challenge_item_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/hkgrotesklight"
        android:text="Title"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/challenge_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/challenge_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Elevator Challenge"
        android:textColor="@color/white"
        android:fontFamily="@font/hkgroteskbold"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/challenge_image"
        app:layout_constraintTop_toBottomOf="@+id/challenge_item_0" />


    <TextView
        android:id="@+id/challenge_item_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/hkgrotesklight"
        android:text="Recommended:"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/challenge_image"
        app:layout_constraintTop_toBottomOf="@+id/challenge_item_title" />


    <TextView
        android:id="@+id/challenge_item_recommendedAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/hkgroteskbold"
        android:text="Elevator Challenge"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/challenge_image"
        app:layout_constraintTop_toBottomOf="@+id/challenge_item_01" />

    <TextView
        android:id="@+id/challenge_item_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Elevator Challenge"
        android:fontFamily="@font/hkgroteskmedium"
        android:textSize="13dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/challenge_item_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge_image" />

</androidx.constraintlayout.widget.ConstraintLayout>