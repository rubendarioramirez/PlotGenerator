<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="com.plotgen.rramirez.plotgenerator.BioFragment">


    <ImageView
        android:id="@+id/background_char_bio"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?backgroundDarker"
        android:scaleType="centerCrop"
        android:elevation="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_char_bio">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/character_bio_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24sp"
                android:fontFamily="@font/typewcond_regular"
                android:gravity="center"
                android:text="His name is Rambo, he is XX years "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/character_bio_name_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:elevation="21dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:shadowColor="?bio_shadow_color"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Rambo"
        android:textAlignment="center"
        android:textColor="?bio_titles_fontColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bio_charimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character_bio_role_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="21dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:shadowColor="?bio_shadow_color"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="Role"
        android:textAlignment="center"
        android:textColor="?bio_titles_fontColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/background_char_bio"
        app:layout_constraintEnd_toEndOf="@+id/character_bio_name_title"
        app:layout_constraintStart_toStartOf="@+id/character_bio_name_title"
        app:layout_constraintTop_toBottomOf="@+id/character_bio_name_title" />

    <ImageView
        android:id="@+id/bio_charimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="21dp"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="@+id/background_char_bio"
        app:layout_constraintStart_toStartOf="@+id/background_char_bio"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
