<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Fragment.ProfileFragment">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/must_login"
                android:textAlignment="center"
                android:fontFamily="@font/typewcond_bold"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            </com.google.android.gms.common.SignInButton>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="invisible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>

                <TextView
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/headline"
                android:text="@string/info"
                android:fontFamily="@font/typewcond_bold"/>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtEmailProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:ems="10"
                    android:hint="@string/email"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelText="@string/email"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:lineSpacingExtra="10sp"
                    android:scrollHorizontally="false"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:fontFamily="@font/typewcond_regular"/>

            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtNamaProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:hint="@string/name"
                    app:met_floatingLabelText="@string/name"
                    app:met_floatingLabel="highlight"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:lineSpacingExtra="10sp"
                    android:scrollHorizontally="false"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/typewcond_regular"/>


            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtProjectsCreated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:hint="@string/projects_created"
                    app:met_floatingLabelText="@string/projects_created"
                    app:met_floatingLabel="highlight"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:lineSpacingExtra="10sp"
                    android:scrollHorizontally="false"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/typewcond_regular"/>


            </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/txtCharCreated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:ems="10"
                    android:hint="@string/characters_created"
                    app:met_floatingLabelText="@string/characters_created"
                    app:met_floatingLabel="highlight"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:lineSpacingExtra="10sp"
                    android:scrollHorizontally="false"
                    android:textColor="@color/content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/typewcond_regular"/>


            </LinearLayout>

            </LinearLayout>

            </ScrollView>

        </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnIAP"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iap_btn"
            android:visibility="invisible"
            android:fontFamily="@font/typewcond_regular"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnSignOut"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:visibility="invisible"
            android:fontFamily="@font/typewcond_regular"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:background="@color/colorAccent"/>

    </LinearLayout>


</RelativeLayout>