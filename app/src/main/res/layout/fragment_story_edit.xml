<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".Fragment.StoryEditFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etEditStory"
            android:lines="14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Story Challenge"
            android:textColorHint="@color/content_lighter"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="8dp"
            android:background="@drawable/bg_rectangle_edittext"
            app:met_textColor="?android:attr/textColorSecondary"
            android:fontFamily="@font/typewcond_regular"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSaveEdit"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/character_save_btn"
        android:fontFamily="@font/typewcond_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:background="@color/colorAccent"/>

</RelativeLayout>