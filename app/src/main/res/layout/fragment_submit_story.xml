<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".Fragment.SubmitStoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/typewcond_bold"
            android:text="@string/submit_welcome"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="@font/typewcond_regular"
            android:text="someone@email.com"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etTitle"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/submit_title"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Title"
            android:textColorHint="@color/content_lighter"
            android:padding="8dp"
            android:inputType="textPersonName"
            android:background="@drawable/bg_rectangle_edittext"
            app:met_textColor="?android:attr/textColorSecondary"

            android:fontFamily="@font/typewcond_regular"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etStory"
            android:lines="10"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/write_here_hint"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Story Challenge"
            android:textColorHint="@color/content_lighter"
            android:inputType="textCapSentences|textMultiLine"
            android:padding="8dp"
            android:background="@drawable/bg_rectangle_edittext"
            app:met_textColor="?android:attr/textColorSecondary"
            android:fontFamily="@font/typewcond_regular"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="@font/typewcond_bold"
            android:text="@string/submit_prompt"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/submit_button"
        android:fontFamily="@font/typewcond_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored"
        android:background="@color/colorAccent"/>

</RelativeLayout>