        <item name="colorAccent">#224339</item>
        <item name="android:windowBackground">@color/colorMetalBackground</item>
        <item name="android:colorBackground">@color/colorMetalBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorDivider">#546e7a</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/headline</item>
        <item name="android:textColorSecondary">@color/content</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

