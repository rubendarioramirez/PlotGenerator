        <item name="colorDivider">#d67748</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <!--DARK THEME-->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_2</item>
        <item name="colorAccent">@color/colorAccent_2</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary_2</item>
        <item name="android:navigationBarColor">@color/background_2</item>
        <item name="android:windowBackground">@color/background_2</item>
        <item name="android:colorBackground">@color/background_2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">@color/headline_2</item>
        <item name="android:textColorSecondary">@color/content_2</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="colorDivider">#253036</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>

    <!--ROMANCE THEME-->
