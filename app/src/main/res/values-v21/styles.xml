    <!--AUTUMN THEME-->
    <style name="AutumnTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_4</item>
        <item name="colorPrimaryDark">@color/headline_4</item>
        <item name="android:navigationBarColor">@color/headline_4</item>
        <item name="colorAccent">@color/colorAccent_4</item>
        <item name="android:textColorPrimary">@color/headline_4</item>
        <item name="android:colorBackground">@color/background_4</item>
