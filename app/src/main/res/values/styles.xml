<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorDivider">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/headline</item>
        <item name="android:textColorSecondary">@color/content</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>

        <!--Char List items-->
        <item name="backgroundDarker">#41dfdcca</item>
        <item name="bio_titles_fontColor">#315e50</item>
        <item name="bio_shadow_color">#FFFFFF</item>

    </style>


    <!-- Metal theme. -->
    <style name="MetalTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#546e7a</item>
        <item name="colorPrimaryDark">#29434e</item>
        <item name="colorAccent">#224339</item>
        <item name="android:windowBackground">@color/colorMetalBackground</item>
        <item name="android:colorBackground">@color/colorMetalBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorDivider">#546e7a</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/headline</item>
        <item name="android:textColorSecondary">@color/content</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!--Char List items-->
        <item name="backgroundDarker">#5b7581</item>
        <item name="bio_titles_fontColor">@color/content</item>
        <item name="bio_shadow_color">#FFFFFF</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_2</item>
        <item name="colorAccent">@color/colorAccent_2</item>
        <item name="android:windowBackground">@color/background_2</item>
        <item name="android:colorBackground">@color/background_2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">@color/headline_2</item>
        <item name="android:textColorSecondary">@color/content_2</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="colorDivider">#253036</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!--Char List items-->
        <item name="backgroundDarker">#303f46</item>
        <item name="bio_titles_fontColor">#FFFFFF</item>
        <item name="bio_shadow_color">#000000</item>
    </style>


    <style name="OpaqueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_3</item>
        <item name="colorAccent">@color/colorAccent_3</item>
        <item name="android:textColorPrimary">@color/headline_3</item>
        <item name="android:textColorSecondary">@color/content_3</item>
        <item name="colorDivider">#7b880e4f</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!--Char List items-->
        <item name="backgroundDarker">#e17fab</item>
        <item name="bio_titles_fontColor">#FFFFFF</item>
        <item name="bio_shadow_color">#000000</item>
    </style>

    <style name="AutumnTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_4</item>
        <item name="colorPrimaryDark">@color/headline_4</item>
        <item name="colorAccent">@color/colorAccent_4</item>
        <item name="android:textColorPrimary">@color/headline_4</item>
        <item name="android:colorBackground">@color/background_4</item>
        <item name="colorDivider">#d67748</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!--Char List items-->
        <item name="backgroundDarker">#d67748</item>
        <item name="bio_titles_fontColor">#FFFFFF</item>
        <item name="bio_shadow_color">#000000</item>
    </style>


    <!--WhiteTHeme THEME-->
    <style name="whiteTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">@color/content_3</item>
        <item name="colorDivider">#383838</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!--Char List items-->
        <item name="backgroundDarker">#FFFFFF</item>
        <item name="bio_titles_fontColor">#000000</item>
        <item name="bio_shadow_color">#FFFFFF</item>
    </style>



    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="bottom_dialog_theme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">#FFFF</item>
        <item name="colorAccent">#FFFF</item>
        <item name="android:colorBackground">#29434e</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">#3bc13d</item>
        <item name="android:textColorPrimary">#FFFF</item>
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_animation</item>
        <item name="android:windowExitAnimation">@anim/fade_out_animation</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#3bc13d</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
