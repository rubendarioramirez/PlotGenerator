<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/headline</item>
        <item name="android:textColorSecondary">@color/content</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>


        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_2</item>
        <item name="colorAccent">@color/colorAccent_2</item>
        <item name="android:windowBackground">@color/background_2</item>
        <item name="android:colorBackground">@color/background_2</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">@color/headline_2</item>
        <item name="android:textColorSecondary">@color/content_2</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>


    <style name="OpaqueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_3</item>
        <item name="colorAccent">@color/colorAccent_3</item>
        <item name="android:textColorPrimary">@color/headline_3</item>
        <item name="android:textColorSecondary">@color/content_3</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AutumnTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_4</item>
        <item name="colorPrimaryDark">@color/headline_4</item>
        <item name="colorAccent">@color/colorAccent_4</item>
        <item name="android:textColorPrimary">@color/headline_4</item>
        <item name="android:colorBackground">@color/background_4</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="bottom_dialog_theme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">#00397F</item>
        <item name="colorAccent">#0AAEEF</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>






    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
